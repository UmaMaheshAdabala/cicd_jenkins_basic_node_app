pipeline{
    agent {
        docker {
            image 'node:14'
             args '-v /var/run/docker.sock:/var/run/docker.sock -v /var/lib/jenkins/.npm:/home/node/.npm'
        }
    }
    environment{
        IAMEGE='umeshadabala/umesh_doc_repo'
    }

    stages{
        stage('Checkout'){
            steps{
                sh 'echo "checkout completed" '
                // git 'https://github.com/UmaMaheshAdabala/cicd_jenkins_basic_node_app.git'
            }
        }
        stage('Install Dependencies'){
            steps{
                sh 'npm install'
            }
        }
        stage('test'){
            steps{
                sh 'npm test'
            }
        }
        stage('QA'){
            steps{
                sh 'npm run lint'
            }
        }
        stage('Build'){
            steps{
                sh 'docker build -t my-node-app .'
            }
        }
        stage('Deploy'){
            steps{
                sh 'docker run -d -p 3000:3000 my-node-app'
            }
        }
        stage('Docker login'){
            steps{
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'USER', passwordVariable: 'PASS')])
                sh 'echo $PASS | docker login -u $USER --password-stdin'
            }
        }
        stage('push'){
            steps {
                sh 'docker tag myapp:latest $IAMEGE:latest'
                sh 'docker push $IAMEGE:latest'
            }
        }
    }
}